<section>
  <!-- Shorten Form -->
  <form action="/shorten" method="POST" class="flex gap-2 mb-6">
    <input
      name="longUrl"
      type="url"
      placeholder="Enter long URL here..."
      class="flex-1 p-2 border rounded"
      required
    />
    <input
     name="expiresAt"
     type="date"
     class="p-2 border rounded"
     required
    />
    <button
      type="submit"
      class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded"
    >
      Shorten
    </button>
  </form>

  <!-- Show Result -->
  <% if (shortUrl) { %>
    <div class="bg-green-100 border border-green-400 px-3 py-2 rounded mb-6">
      Short URL: 
      <a href="<%= shortUrl %>" class="text-blue-600 font-bold ml-2" target="_blank">
        <%= shortUrl %>
      </a>
    </div>
  <% } %>

  <!-- URL History Table -->
  <h2 class="text-lg font-semibold mb-3">Your URLs</h2>

  <table class="w-full bg-white rounded shadow overflow-hidden">
    <thead class="bg-gray-200 text-left">
      <tr>
        <th class="py-2 px-3">Short</th>
        <th class="py-2 px-3">Destination</th>
        <th class="py-2 px-3 text-center">Clicks</th>
        <th class="py-2 px-3 text-center">Status</th>
        <th class="py-2 px-3 text-center">Action</th>
      </tr>
    </thead>

    <tbody>
      <% urls.forEach(url => { %>
        <%- include("./url-row", { url }) %>
      <% }) %>
    </tbody>
  </table>

</section>
