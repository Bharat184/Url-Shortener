<div class="bg-white/10 backdrop-blur-md p-10 rounded-2xl shadow-xl w-96 border border-white/20 animate-fadeIn">

    <h1 class="text-3xl font-semibold text-white text-center mb-6">Create Account</h1>

    <form action="/register" method="POST" class="space-y-4">

      <input name="email" type="email"
        class="w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-gray-200 focus:outline-none focus:ring-2 focus:ring-purple-400"
        placeholder="Email" required />

      <input name="password" type="password"
        class="w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-gray-200 focus:outline-none focus:ring-2 focus:ring-purple-400"
        placeholder="Password" required />

      <button
        class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 rounded-lg transition">
        Register
      </button>

    </form>

    <p class="text-center text-gray-200 mt-5">
      Already have an account?
      <a href="/login" class="text-purple-300 hover:underline">Login</a>
    </p>

  </div>
