<div class="min-h-screen flex flex-col bg-[#0f1a2b] text-white">

  <!-- Center the OTP section -->
  <div class="flex-1 flex flex-col items-center justify-center px-4">
    
    <h1 class="text-2xl font-bold mb-4">Verify Email</h1>

    <p class="text-gray-300 mb-6 text-center">
      Enter the 6-digit code sent to your email (add anything)
    </p>

    <form action="/verify" method="POST" class="w-full max-w-sm">
        <input type="hidden" name="userId" value=<%= userId %>>

      <div class="grid grid-cols-6 gap-3 mb-5">
        <% for(let i = 0; i < 6; i++) { %>
          <input maxlength="1" name="otp[]" autocomplete="off"
            class="text-center p-3 bg-[#1c2a3e] border border-gray-700 rounded-md text-xl
            outline-none focus:border-blue-500"
            required
          />
        <% } %>
      </div>

      <% if (messages?.error && messages.error.length) { %>
        <p class="text-red-500 text-center text-sm mb-4"><%= messages.error[0] %></p>
      <% } %>

      <button type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 transition p-3 rounded-md font-semibold">
        Verify
      </button>

      <p class="mt-4 text-sm text-center text-gray-400">
        Didnâ€™t receive the code?
        <a href="/verify" class="text-blue-400 hover:underline">
          Resend
        </a>
      </p>

    </form>
  </div>
</div>
